
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  value Float
  available_for_sale Boolean
  created_ad DateTime? @default(now())

  @@map("products")
}